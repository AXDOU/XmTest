<link href="~/kindeditor/themes/qq/qq.css" rel="stylesheet" />
<link href="~/kindeditor/themes/default/default.css" rel="stylesheet" />
<script src="~/kindeditor/kindeditor-all-min.js"></script>
<script src="~/kindeditor/lang/zh-CN.js"></script>
<script src="~/kindeditor/plugins/code/prettify.js"></script>
<script src="~/Contents/js/jquery-3.3.1.min.js"></script>
<script src="~/Contents/js/jsframework.ui.js"></script>
<script type="text/javascript">
    var editor1;
    KindEditor.ready(function (K) {
        editor1 = K.create('#Content', {
            cssPath: 'kindeditor/plugins/code/prettify.css',
            allowFileManager: true,
            afterCreate: function () {
                var self = this;
            }
        });
        prettyPrint();
    });
    function preSave() {
        var html = editor1.html();
        editor1.sync();
        var form_data = $('#example').serializeObject();
        console.log(JSON.stringify(form_data));
        var params = {
            url: "/Category/Category/AddNoteN",
            data: { str: JSON.stringify(form_data) }
        }
        $.submitForm(params);
    }
</script>
