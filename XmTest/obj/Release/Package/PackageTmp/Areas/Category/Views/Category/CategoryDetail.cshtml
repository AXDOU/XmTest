@using XmTest.Models;
@{
    ViewBag.Title = "CategoryDetail";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<h2>@ViewBag.CategoryTitle</h2>
<link href="~/Contents/css/Notes/Notes.css" rel="stylesheet" />
<div>
@foreach (var item in ViewBag.xcList as List<Notes>)
{
    <div class="Note">
        <h4><a href="/Category/Category/Detail?NoteID=@item.Id">@item.Title</a></h4>
        <h5>——千千阙歌，照亮我的心灵！</h5>
        <div class="Note_Content">
            <span>@(new HtmlString(item.Content))</span>
        </div>
        <div class="Note_bottom">
            <div class="Note_bottom _left">
                <span> 2018-08-15</span>
            </div>
            <div class="Note_bottom _right">
                <span>赞(@item.ThumbUpCount)</span><span>踩(0)</span><span>评论(0)</span>
            </div>
        </div>
    </div>
}
</div>


