@model List<XmTest.Models.Notes>
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/Contents/css/Notes/Notes.css" rel="stylesheet" />
@foreach (var item in Model)
{
    <div class="Note">
        <h4>@item.Title</h4>
        <h5>——千千阙歌，照亮我的心灵！</h5>
        <div class="Note_Content">
            @(new HtmlString(item.Content))
        </div>
        <div class="Note_bottom">
            <div class="Note_bottom _left">
                <span> 2018-08-15</span>
            </div>
            <div class="Note_bottom _right">
                <span>赞(@item.ThumbUpCount)</span><span>踩(0)</span><span>评论(@item.Viewed)</span>
            </div>
        </div>
    </div>
}
